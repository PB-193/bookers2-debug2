<!-- application.html.erb にrenderが-->
<% if user_signed_in? %>
  <%= form_with url: search_path, method: :get, local: true do |f| %>
  <!-- url: search_path　はフォームが送信されたときにデータが送信される先のURLを指定しています。
  　　　method: :getは、フォームがGETメソッドで送信されることを指定しています。-->
    <%= f.text_field :content %>
    <%= f.select :model, options_for_select({ "User" => "user", "Book" => "book" }) %>
    <!-- ユーザーが検索したい対象のモデルを選択するためのセレクトボックスを表示します。
         options_for_selectメソッドは、セレクトボックスに表示するオプションの配列を作成します。 -->
    <%= f.select :method, options_for_select({ "完全一致" => "perfect", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partial" }) %>
    <%= f.submit '検索', class:"btn btn-outline-dark" %>
  <% end %>
<% end %>